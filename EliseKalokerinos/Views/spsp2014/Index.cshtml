            <div class="col-lg-12">
                <h1>Society for Personality and Social Psychology 2014</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <a href="@Url.Content("~/Documents/Elise Kalokerinos Poster spsp2014 medium.png")" target="blank" onclick="_gaq.push(['_trackEvent', 'Downloads', 'SPSP2014Poster', 'Thumbnail']);"><img class="img-responsive" src="@Url.Content("~/Images/spsp2014_thumbnail.png")" /></a>
